fileignoreconfig:
  - filename: .env.example
    ignore_detectors: [filename]
  - filename: .github/workflows/pipeline.yml
    allowed_patterns:
      - GITOPS_DIGITALCHECK_APP_ID
      - GITOPS_DIGITALCHECK_APP_PRIVATE_KEY
      - secrets
      - "github_app_private_key:"
  - filename: src/env.d.ts
    checksum: 5038b8fab76b0de569a939642941f93de3d9b54a8a274b860b5163afd0b3a58f
  - filename: src/layouts/Posthog.astro
    checksum: 050b9e802c7a1261b1fba612696ab5d3ae716f8e122edd316c91ab89233ec82d
  - filename: src/config/posthog.ts
    checksum: bfa6e5b573b6a00e9ca64d34be9c4cc9e35d91cf6753d751a3f4df7f334ea9c3
  - filename: .github/workflows/scan.yml
    checksum: 54f9b311242a69bb864655e38cfb084a21571baa520cca262d8363fcc038abe5
  - filename: nginx/nginx.template.conf
    allowed_patterns:
      - proxy_pass
      - sha256-[^\s]+
allowed_patterns:
  - \@[a-z0-9]{40} # Allow fixing action hashes
  - "secrets: inherit"
  - "key: ${{ runner.os }}"
  - "public key"
  - "secrets.GITHUB_TOKEN"

scopeconfig:
  - scope: node # ignores files such as package-lock.json
