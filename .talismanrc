fileignoreconfig:
  - filename: .env.example
    ignore_detectors: [filename]
  - filename: .github/workflows/pipeline.yml
    allowed_patterns:
      - GITOPS_DIGITALCHECK_APP_ID
      - GITOPS_DIGITALCHECK_APP_PRIVATE_KEY
      - secrets
      - "github_app_private_key:"
  - filename: src/env.d.ts
    checksum: 1fe1ffbe2eacad142f2455c1cc0b0229aeee2eb8768a1642b3de150687f64b0a
  - filename: src/components/Posthog.astro
    checksum: d395ec7104227b50584515c389c2f5ef652dd1f0611e1e6654dd0c692f1ef690
allowed_patterns:
  - \@[a-z0-9]{40} # Allow fixing action hashes
  - "secrets: inherit"
  - "key: ${{ runner.os }}"
  - "public key"
  - "secrets.GITHUB_TOKEN"
  - "POSTHOG_KEY"

scopeconfig:
  - scope: node # ignores files such as package-lock.json
