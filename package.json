{
  "name": "zentrum-fuer-legistik",
  "type": "module",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "audit:licences": "license-checker-rseidelsohn --production --excludePrivatePackages --onlyAllow 'MIT;BSD-3-Clause;BSD-2-Clause;0BSD;ISC;Apache-2.0;MPL-2.0;BlueOak-1.0.0;Custom: LICENSE;Unlicense;EUPL-1.2' --summary",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format:check": "prettier --check",
    "format:fix": "pnpm run format:fix-selected .",
    "format:fix-selected": "prettier --write --ignore-unknown",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint:fix-selected",
    "lint:fix-selected": "eslint --fix",
    "test": "vitest",
    "test:e2e": "pnpm run build && playwright test --project=chromium",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t zfl-website .",
    "docker:run": "docker run -d -p 8080:8080 --name zfl-website zfl-website:latest",
    "docker:stop": "docker stop zfl-website || true && docker rm zfl-website",
    "docker:dev": "pnpm run docker:build && npm run docker:run",
    "docker:logs": "docker logs -f zfl-website",
    "preinstall": "echo 'Please disable script execution for security reasons: npm config set ignore-scripts true' && exit 1"
  },
  "dependencies": {
    "@astrojs/alpinejs": "^0.4.9",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/sitemap": "^3.7.0",
    "@digitalservice4germany/angie": "^2.4.0",
    "@digitalservice4germany/style-dictionary": "^2.0.0",
    "@iconify-json/ic": "^1.2.4",
    "@kern-ux/native": "^2.4.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/alpinejs": "^3.13.11",
    "alpinejs": "^3.15.8",
    "astro": "^5.17.2",
    "astro-icon": "^1.1.5",
    "astro-seo": "^1.1.0",
    "docx": "^9.5.3",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.1",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@commitlint/types": "^20.4.0",
    "@eslint/js": "^9.39.2",
    "@eslint/markdown": "^7.5.1",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/browser-playwright": "^4.0.18",
    "astro-eslint-parser": "^1.3.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.6.0",
    "globals": "^17.3.0",
    "license-checker-rseidelsohn": "^4.4.2",
    "prettier": "^3.8.1",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.29.2",
  "pnpm": {
    "overrides": {
      "nth-check": "2.0.1",
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23",
      "tar@<7.5.8": ">=7.5.8"
    }
  }
}
