---
interface Props {
  hLevel: 1 | 2 | 3 | 4 | 5 | 6;
  size: "large" | "default" | "small";
}

const { hLevel, size = "default" } = Astro.props;

const propMap = {
  large: "kern-title--large",
  default: "",
  small: "kern-title--small",
} satisfies Record<Props["size"], string>;

const Tag: "h1" | "h2" | "h3" | "h4" | "h5" | "h6" = `h${hLevel}`;
---

<Tag class=`kern-title ${propMap[size]}`><slot /></Tag>
