---
interface Props {
  level: 1 | 2 | 3 | 4 | 5 | 6;
  size?: "large" | "default" | "small";
}

const { level, size = "default" } = Astro.props;

const propMap = {
  large: "kern-title--large",
  default: "",
  small: "kern-title--small",
} satisfies Record<NonNullable<Props["size"]>, string>;

const Tag: "h1" | "h2" | "h3" | "h4" | "h5" | "h6" = `h${level}`;
---

<Tag class:list={["kern-title", propMap[size]]}><slot /></Tag>
