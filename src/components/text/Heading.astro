---
import type { HTMLAttributes } from "astro/types";
import { tv, type VariantProps } from "tailwind-variants";

interface Props extends HTMLAttributes<"h1">, VariantProps<typeof styles> {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  class?: string;
}

const styles = tv({
  base: "kern-heading-medium",
  variants: {
    variant: {
      xLarge: "kern-heading-x-large",
      large: "kern-heading-large",
      medium: "kern-heading-medium",
      small: "kern-heading-small",
    },
  },
});

const { level = 1 } = Astro.props;
const Tag: "h1" | "h2" | "h3" | "h4" | "h5" | "h6" = `h${level}`;
const { class: className, variant, ...attrs } = Astro.props;
---

<Tag class={styles({ variant, className })} {...attrs}><slot /></Tag>
