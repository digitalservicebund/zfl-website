---
import type { HTMLAttributes } from "astro/types";
import { tv, type VariantProps } from "tailwind-variants";

interface Props extends HTMLAttributes<"div">, VariantProps<typeof styles> {
  contentClass?: string;
  wrapperClass?: string;
}

export const styles = tv({
  base: "py-md sm:px-lg scroll-my-md flex flex-row gap-32 rounded-lg bg-white px-16",
  variants: {
    look: {
      gray: "bg-lavender-base",
    },
  },
});

const contentStyles = tv({
  base: "flex flex-col",
});

const { contentClass, wrapperClass, look, ...attrs } = Astro.props;
---

<div class={styles({ look, class: wrapperClass })} {...attrs}>
  {
    Astro.slots.icon && (
      <div class="shrink-0 max-sm:hidden">
        <slot name="icon" />
      </div>
    )
  }
  <div class={contentStyles({ class: contentClass })}><slot /></div>
</div>
