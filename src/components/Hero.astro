---
interface Props {
  class?: string;
}
const hasSubtitle = Astro.slots.has("subtitle");
---

<div class="hero breakout">
  <slot />
  {
    hasSubtitle && (
      <div class="kern-body--large">
        <slot name="subtitle" />
      </div>
    )
  }
</div>

<style>
  .hero {
    background: var(--color-zfl-main80);
    --kern-color-layout-text-default: white;
    padding: 56px 0 64px;
  }
</style>
