---
import { Icon } from "astro-icon/components";

interface Props {
  href: string;
}
const { href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="text-link inline whitespace-nowrap"
>
  <slot /><Icon
    name="material-symbols:open-in-new-rounded"
    class="mb-1 ml-2 inline no-underline"
  /></a
>
