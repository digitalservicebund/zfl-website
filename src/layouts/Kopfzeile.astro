---
import { isDevelopment } from "../config/features";
---

<div class="kern-kopfzeile">
  <div class="kern-container">
    <div class="kern-kopfzeile__content">
      <span class="kern-kopfzeile__flagge" aria-hidden="true">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 16">
          <path fill="#000" d="M0 .5h24v5.333H0z"></path>
          <path fill="red" d="M0 5.833h24v5.333H0z"></path>
          <path fill="#FACA2C" d="M0 11.167h24V16.5H0z"></path>
        </svg>
      </span>
      <span class="kern-kopfzeile__label">
        Offizielle Website – Bundesrepublik Deutschland{
          isDevelopment && " (STAGING)"
        }
      </span>
    </div>
  </div>
</div>

<style>
  /* These styles come with KERN — remove this element if the library is integrated. */
  .kern-kopfzeile {
    background: #f7f7f9;
    padding: 5px 0;
  }

  .kern-container,
  .kern-container-fluid {
    width: 100%;
    margin-inline: auto;
    padding-inline: 16px;
    box-sizing: border-box;
  }

  .kern-container-fluid {
    max-width: 100%;
  }

  .kern-kopfzeile__content {
    display: flex;
    padding: 1px 0;
    align-items: center;
    gap: 8px;
  }

  .kern-kopfzeile__flagge {
    display: flex;
    width: 24px;
    height: 16px;
    flex-shrink: 0;
  }

  .kern-kopfzeile__flagge svg {
    vertical-align: baseline;
    outline: 1px solid #ffffff;
  }

  .kern-kopfzeile__label {
    color: #171a2b;
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 20px;
  }

  @media only screen and (max-width: 768px) {
    .kern-kopfzeile__flagge {
      width: 18px;
      height: 12px;
    }
    .kern-kopfzeile__label {
      font-size: 14px;
      line-height: 16px;
    }
    .kern-kopfzeile .kern-container,
    .kern-kopfzeile .kern-container-fluid {
      padding-left: 8px;
      padding-right: 8px;
    }
  }
</style>
