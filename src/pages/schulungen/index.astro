---
import Card from "@/components/Card.astro";
import SupportCard from "@/components/blocks/SupportCard.astro";
import Badge from "@/components/Badge.astro";
import { ZFL_EMAIL } from "@/config/constants";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import schulungenImage from "@/images/Schulungen.png";
import Link from "@/components/Link.astro";
import Hero from "@/components/Hero.astro";
import Schedule from "./_schedule.astro";
import { isProduction } from "@/config/stage";
import PreviewContent from "./_preview.mdx";
import appointments from "./_appointments.json";

export const frontmatter = {
  title: "Schulungen",
  sitemap: true,
};
---

<Layout title={frontmatter.title}>
  <main class="breakout-grid overflow-x-hidden">
    <Hero>
      <div class="relative mt-40 gap-40 space-y-40 md:flex md:flex-row">
        <div class="relative z-20 space-y-32">
          <h1 class="hyphens-manual">
            In Schulungen praktisches Wissen und Kompetenzen erlangen
          </h1>
          <p>
            In den umsetzungsorientierten Schulungen des Zentrum für Legistik
            lernen Sie Methoden und Werkzeuge kennen, die Sie bei der
            Erarbeitung von praxisnahen und bürokratiearmen Regelungen
            unterstützen.
          </p>
          {
            isProduction && (
              <a href="#schulungen" class="btn-primary link-unstyled">
                Jetzt anmelden
              </a>
            )
          }
        </div>
        <Image
          class="max-md:absolute max-md:top-0 max-md:bottom-0 max-md:left-3/4 max-md:aspect-square max-md:h-full max-md:opacity-20 md:size-288"
          src={schulungenImage}
          alt=""
        />
      </div>
    </Hero>

    {
      isProduction ? (
        <Card
          look="gray"
          contentClass="gap-40"
          wrapperClass="my-80 sm:px-40 bg-lavender-400"
          id="schulungen"
        >
          <div>
            <Badge>
              <Icon name="ic:outline-timer" class="opacity-50" />
              Nächste Termine
            </Badge>
            <h3>Zu diesen Schulungen können Sie sich direkt anmelden</h3>
          </div>
          <div>
            <h3 class="ds-subhead">
              Regelungen digitaltauglich gestalten – praktische Tipps für den
              Digitalcheck <span class="whitespace-nowrap">(1,5 Stunden)</span>
            </h3>
            <p>
              Inhalte: Digitalcheck erfolgreich bearbeiten, digitaltaugliche
              Formulierungen, Anwenden der Prinzipien für Digitaltauglichkeit,
              EU-Interoperabilität
            </p>
            <Schedule caption="Nächste Termine" appointments={appointments} />
          </div>

          <div>
            <h3 class="ds-subhead">
              Basisschulung für Legistinnen und Legisten
              <span class="whitespace-nowrap">(4 Tage)</span>
            </h3>
            <p>
              Inhalte: Umsetzungsperspektive verstehen, Visualisierungen
              erstellen, Entscheidungsbäume ausarbeiten, Rechtsförmlichkeit und
              verständliche Sprache sicherstellen
            </p>
            <p>Die nächsten Termine werden demnächst bekanntgegeben.</p>
          </div>

          <div>
            <h3 class="font-bold">Anmeldung</h3>
            <p>
              Schicken Sie uns für eine Anmeldung den Schulungs- oder
              Modul-Namen und Termin an die E-Mail{" "}
              <Link href={ZFL_EMAIL.url}>{ZFL_EMAIL.display}</Link> und wir
              bestätigen die Anmeldung.
            </p>
          </div>
        </Card>
      ) : (
        <section class="my-80 [&>h2]:mt-80 [&>h3]:mt-40 [&>h4]:mt-20">
          <PreviewContent />
        </section>
      )
    }

    <section class="bg-lavender-base breakout py-80">
      <SupportCard />
    </section>
  </main>
</Layout>
